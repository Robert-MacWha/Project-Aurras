<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurras Frontend App</title>
    
    <%- include('./partials/styles.ejs') %> 

    <link rel="stylesheet" href="../css/commands.css">
</head>
<body>

    <%- include('partials/titlebar.ejs'); %> 

    <!-- Remainder of the content -->
    <div class="main">

        <%- include('partials/sidebar.ejs', {current: 'entities'}) %> 

        <div class="page">

            <!-- Title -->
            <h1>Train Aurras</h1>
            <p class="pb-1">Entities are collections of words or features that can be extracted from prompts as extra context</p>

            <!-- Create an entity -->
            <h3>Create an Entity</h3>
            <form class="pb-4" id="entities">

                <div class="row pb-2">

                    <div class="form-group col-4">

                        <label for="name">Name</label>
                        <input name="name" type="text" class="form-control" id="name" placeholder="location..." required>

                    </div>
                    <div class="form-group col-8">

                        <label for="description">Description</label>
                        <input name="description" type="text" class="form-control" id="description" placeholder="A city, country or otherwise uniquely named area">

                    </div>

                </div>

                <button type="submit" class="btn btn-primary" id="btn-submit">Create Entity</button>

            </form>

            <!-- Other entities -->
            <h3>Entities</h3>
            <input class="form-control searchInputs" type="text" placeholder="Search..">
            <table class="table">

                <thead>
                    <tr>
    
                        <th>Entity</th>
                        <th>Description</th>
    
                    </tr>
                </thead>
                <tbody  class="commandTable">
                    
                    <% for(const [key, value] of Object.entries(entities)) { %>
                        <tr>
                            <th scope="row"><%- value.name %></th>
                            <td class="overflow"><%- value.description %></td>
                        </tr>
                    <% }; %>

                </tbody>
    
            </table>

        </div>

    </div>

    <%- include('./partials/scripts.ejs') %> 
    <script src="../js/commands.js"></script>
    
</body>
</html>